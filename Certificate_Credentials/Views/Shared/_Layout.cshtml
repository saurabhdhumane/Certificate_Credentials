<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:ital@1&display=swap" />
    <script src="https://kit.fontawesome.com/a2c2990c18.js" crossorigin="anonymous"></script>
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Salsa&display=swap');

        body {
            font-family: "Salsa", cursive;
            background-color: #1a1a1a;
            color: #ffffff;
            margin: 0;
            padding: 0;
            text-transform:capitalize;
        }

        .navbar {
            background-color: #2b2b2b;
        }

        .jumbotron {
            background-color: #333333;
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .jumbotron img {
            max-width: 100%;
            height: auto;
            border-radius: 10px;
        }

        .form-control {
            border-radius: 10px;
            background-color: #444444;
            color: #ffffff;
        }

        .btn-dark {
            background-color: #ff8c00;
            border-color: #ff8c00;
            color: #ffffff;
            /*text-decoration:none;*/
        }

            .btn-dark a {
                text-decoration: none;
                color: white;
            }

        table {
            font-family: 'Montserrat', sans-serif;
            width: 100%;
            margin-top: 20px;
            color: #ffffff;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #555555;
        }

        th {
            background-color: #333333;
            color: #ff8c00;
        }

        .jumbotron h6 {
            font-size: 1.5rem;
        }

       @@media (max-width: 768px) {
            .jumbotron h6 {
                font-size: 1.2rem;
            }
        }

        .btn-download,
        .btn-share {
            margin-top: 15px;
            margin-right: 20px;
            /* float: left; */
        }

        tr:nth-child(even) {
            background-color: #3a3a3a;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-dark navbar-expand-lg">
        <div class="container navbar-brand">
                <img src="~/Assets/MindScape.png" width="150" height="60" />
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="color:white">&copy; @DateTime.Now.Year - Certificate Credentials</p>
            <div class="text-center">
                <img src="~/Assets/MindScape.png" alt=" Logo" class=" mt-4"
                     style="max-width: 200px" /> <span style="color: #ff8c00;font-weight:900"></span>
            </div>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
                    integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
                    crossorigin="anonymous"></script>
        </footer>
        <br />

       
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
